      "source": [
        "import numpy as np\n",
        "\n",
        "# --------- Gates ---------\n",
        "PAULI_X = np.array([[0, 1],\n",
        "                    [1, 0]], dtype=complex)\n",
        "\n",
        "PAULI_Y = np.array([[0, -1j],\n",
        "                    [1j, 0]], dtype=complex)\n",
        "\n",
        "PAULI_Z = np.array([[1, 0],\n",
        "                    [0, -1]], dtype=complex)\n",
        "\n",
        "HADAMARD = (1/np.sqrt(2)) * np.array([[1, 1],\n",
        "                                      [1, -1]], dtype=complex)\n",
        "\n",
        "# --------- Generate basis states ---------\n",
        "def basis_states(n):\n",
        "    return [format(i, f'0{n}b') for i in range(2**n)]\n",
        "\n",
        "# --------- Convert basis to state vector ---------\n",
        "def basis_to_state(bitstring):\n",
        "    size = 2 ** len(bitstring)\n",
        "    state = np.zeros((size, 1), dtype=complex)\n",
        "    index = int(bitstring, 2)\n",
        "    state[index][0] = 1\n",
        "    return state\n",
        "\n",
        "# --------- Apply gate to all qubits ---------\n",
        "def apply_gate(gate, state, n):\n",
        "    full_gate = gate\n",
        "    for _ in range(n - 1):\n",
        "        full_gate = np.kron(full_gate, gate)\n",
        "    return np.dot(full_gate, state)\n",
        "\n",
        "# --------- Convert state vector to Dirac notation ---------\n",
        "def state_to_dirac(state, n):\n",
        "    result = \"\"\n",
        "    flat_state = state.flatten()\n",
        "\n",
        "    for i, amplitude in enumerate(flat_state):\n",
        "        if abs(amplitude) > 1e-10:  # ignore very small values\n",
        "            bitstring = format(i, f'0{n}b')\n",
        "\n",
        "            # Clean amplitude formatting\n",
        "            if np.isclose(amplitude, 1):\n",
        "                result += f\"|{bitstring}⟩ + \"\n",
        "            elif np.isclose(amplitude, -1):\n",
        "                result += f\"-|{bitstring}⟩ + \"\n",
        "            else:\n",
        "                result += f\"({np.round(amplitude,4)})|{bitstring}⟩ + \"\n",
        "\n",
        "    if result:\n",
        "        return result[:-3]  # remove last \" + \"\n",
        "    else:\n",
        "        return \"0\"\n",
        "\n",
        "# --------- User Input ---------\n",
        "n = int(input(\"Enter number of qubits (1 or 2 only): \"))\n",
        "if n not in [1, 2]:\n",
        "    print(\"Only 1 or 2 qubits allowed.\")\n",
        "    exit()\n",
        "\n",
        "states = basis_states(n)\n",
        "\n",
        "print(\"\\nPossible basis states:\")\n",
        "for s in states:\n",
        "    print(\"|\" + s + \"⟩\")\n",
        "\n",
        "# --------- Choose basis ---------\n",
        "choice = input(\"\\nApply gate to (single/all): \").lower()\n",
        "\n",
        "selected_states = []\n",
        "if choice == \"single\":\n",
        "    selected = input(\"Enter basis state (e.g. 00, 01): \")\n",
        "    if selected not in states:\n",
        "        print(\"Invalid basis state.\")\n",
        "        exit()\n",
        "    selected_states.append(selected)\n",
        "elif choice == \"all\":\n",
        "    selected_states = states\n",
        "else:\n",
        "    print(\"Invalid choice.\")\n",
        "    exit()\n",
        "\n",
        "# --------- Gate menu ---------\n",
        "print(\"\\n--- Quantum Gate Menu ---\")\n",
        "print(\"1. Pauli-X\")\n",
        "print(\"2. Pauli-Y\")\n",
        "print(\"3. Pauli-Z\")\n",
        "print(\"4. Hadamard\")\n",
        "\n",
        "gate_choice = int(input(\"Enter your choice: \"))\n",
        "\n",
        "gate_map = {1: PAULI_X, 2: PAULI_Y, 3: PAULI_Z, 4: HADAMARD}\n",
        "gate = gate_map.get(gate_choice)\n",
        "\n",
        "if gate is None:\n",
        "    print(\"Invalid gate.\")\n",
        "    exit()\n",
        "\n",
        "# --------- Apply and display ---------\n",
        "for s in selected_states:\n",
        "    state = basis_to_state(s)\n",
        "    result = apply_gate(gate, state, n)\n",
        "\n",
        "    print(f\"\\nApplying gate to |{s}⟩\")\n",
        "    print(\"Resulting state (matrix form):\")\n",
        "    print(result)\n",
        "\n",
        "    dirac_form = state_to_dirac(result, n)\n",
        "    print(\"This is equal to:\", dirac_form)"
      ]
    }
  ]
}